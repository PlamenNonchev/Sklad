 {{>header}}
 <form class="edit-product" action="#/edit/{{product.objectId}}" method="post">

    <div class="form-label-group">
      <label for="inputProductName">Name</label>
      <input type="text"  name="name" class="form-control" placeholder="Name" required="" autofocus="" value = "{{product.name}}">
      
    </div>

    <div class="form-label-group">
      <label for="inputProductPrice">Price</label>
      <input type="text"  value = "{{product.price}}" name="price" class="form-control" placeholder="Price" required="">
      
    </div>

    <div class="form-label-group">
      <label for="inputProductDetails">Description</label>
      <textarea type="text"  name="details" class="form-control" placeholder="Details" required="" >{{product.details}}</textarea>
      
    </div>

    <div class="form-label-group">
      <label for="inputProductImage">Image</label>
      <input type="text" value = "{{product.imageURL}}" name="imageURL" class="form-control" placeholder="Image" required="" autofocus="">
      
    </div>

     <div class="form-label-group">
      <label for="inputTrekImage">Quantity</label>
      <input type="text" value="{{product.quantity}}" name="quantity" class="form-control" placeholder="Quantity" required="" autofocus="">
      
    </div>
    <div style="display: none">
      <input name="creator" value="{{product.addedBy}}" />
     
    </div>

    <button class="btn btn-lg btn-dark btn-block" type="submit">Edit the product</button>
  </form>
  {{>footer}}